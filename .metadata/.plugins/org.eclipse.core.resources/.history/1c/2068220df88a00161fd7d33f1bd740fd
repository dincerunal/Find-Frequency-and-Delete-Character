package com.dincerunal.main;

public class StringIslemleri {

	public static void main(String[] args) {
		String text="aaba kouq bux";
		StringIslemleri(text);

	}
	
	public static void StringIslemleri(String txt){
		int a = 0,b = 0,c = 0,
		ç = 0, d = 0, e = 0, f = 0, g = 0, ğ = 0, h = 0,  
		i = 0, ı = 0, j = 0, k= 0, l= 0, m= 0, 
		n= 0, o = 0, ö= 0, p = 0, r= 0, s= 0, ş= 0, t= 0, u= 0, ü= 0, v= 0, y= 0, z= 0;
		
		for (int i2 = 0; i2 < txt.length(); i2++) {
			switch (txt.substring(i2)) {
			case "a":
				a++;
				break;
			case "b":
				b++;
				break;
			case "c":
				c++;
				break;
			case "ç":
				ç++;
				break;
			case "d":
				d++;
				break;
			case "e":
				e++;
				break;
			case "f":
				f++;
				break;
			case "g":
				g++;
				break;
			case "ğ":
				ğ++;
				break;
			case "h":
				h++;
				break;

			case "i":
				i++;
				break;
			case "ı":
				ı++;
				break;
			case "j":
				j++;
				break;
			case "k":
				k++;
				break;
			case "l":
				l++;
				break;
			case "m":
				m++;
				break;
			case "n":
				n++;
				break;
			case "o":
				o++;
				break;
			case "ö":
				ö++;
				break;
			case "p":
				p++;
				break;
			case "r":
				r++;
				break;
			case "s":
				s++;
				break;
			case "ş":
				ş++;
				break;
			case "t":
				t++;
				break;		
			case "u":
				u++;
				break;
			case "ü":
				ü++;
				break;
			case "v":
				v++;
				break;
			case "y":
				y++;
				break;
			default:
				z++;
				break;
			}
		}
		System.out.println("a sayisi : " + a);
		
	}

}
